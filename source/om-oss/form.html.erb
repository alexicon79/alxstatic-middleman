---
title: "form test"
form_mailer: "http://static.alxlabs.se/php/mailer.php"
---

<div class="welcome">
  <h1>My form</h1>

  <% form_tag data.page.form_mailer, :class => 'alx-form', :method => 'post' do %>
    <% field_set_tag do %>
      <p>
        <%= label_tag :name, :class => 'first' %>
        <%= text_field_tag :name, :placeholder => 'namn' %>
      </p>
      <p>
        <%= label_tag :email, :class => 'first' %>
        <%= email_field_tag :email, :placeholder => 'epost' %>
      </p>
      <p>
        <%= label_tag :message, :class => 'first' %>
        <%= text_area_tag :message, :placeholder => 'meddelande' %>
      </p>
    <% end %>
    <% field_set_tag(:class => 'buttons') do %>
      <%= submit_tag "Skicka" %>
    <% end %>
  <% end %>

<div id="loading">
  Sending your message....
</div>

<div id="success"></div>

<h2>test</h2>
<p><%= lorem.sentences 35 %></p>

<h2 id="natverk">hash</h2>
<p><%= lorem.sentences 22 %></p>

</div><!-- .form -->
